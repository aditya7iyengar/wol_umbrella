<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">Editing Person</h2>
    </div>

    <div class="panel-body">
      <%= render "form.html", Map.put(assigns, :action, person_path(@conn, :update, @person)) %>
    </div>

    <div class="panel-footer clearfix">
      <%= link to: person_path(@conn, :index), class: "btn btn-default btn-xs pull-left" do %>
        <span aria-hidden="true">&larr;</span> Back to all People
      <% end %>
    </div>
</div>
